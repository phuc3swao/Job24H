@page
@using viecLam24hBE.Commons;
@model viecLam24hFE.Pages.NguoiTuyenDung.TaoTinTuyenDungDetailModel
@{
    Layout = "_LayoutManagerTuyenDung";
}

<div class="card" style="border-radius: 1rem;">
    <div class="card-body p-4">
        <h2 class="font-semibold text-lg">Tạo tin tuyển dụng</h2>
        <div class="bg-grey-light mb-3 mt-4"></div>
        <div class="card-body p-3">
            <div class="bg-cyan-dark-blue mb-2" style="width: 100px; height: 10px;"></div>
            <p class="font-semibold text-lg mb-3">Marketing</p>
            <div class="row mb-4">
                <div class="col-lg-6">
                    <table>
                        <tr>
                            <th width="210px" height="30px" class="text-grey-50 font-semibold">Nghề nghiệp:</th>
                            <td class="text-sm font-semibold">@Model.JobPostViewModel.JobTypeViewModel.Type
                                <input type="hidden" value="@Model.JobPostViewModel.CreatedDate" />
                            </td>
                        </tr>
                        <tr>
                            <th height="30px" class="text-grey-50 font-semibold">Hình thức làm việc:</th>
                            <td class="text-sm font-semibold">
                                @Enums.GetValueFromKey(Enums.WorkingFormEnums,
                                Model.JobPostViewModel.WorkingForm).ToString()
                            </td>
                        </tr>
                        <tr>
                            <th height="30px" class="text-grey-50 font-semibold">Số lượng tuyển:</th>
                            <td class="text-sm font-semibold">@Model.JobPostViewModel.Quantity</td>
                        </tr>
                        <tr>
                            <th height="30px" class="text-grey-50 font-semibold">Yêu cầu độ tuổi:</th>
                            <td class="text-sm font-semibold">@Model.JobPostViewModel.MinAge - @Model.JobPostViewModel.MaxAge tuổi</td>
                        </tr>
                        <tr>
                            <th height="30px" class="text-grey-50 font-semibold">Mức lương:</th>
                            <td class="text-sm font-semibold">@Model.JobPostViewModel.Salary $</td>
                        </tr>
                        <tr>
                            <th height="30px" class="text-grey-50 font-semibold">Địa điểm làm việc:</th>
                            <td class="text-sm font-semibold">@Model.JobPostViewModel.JobLocation</td>
                        </tr>
                    </table>
                </div>
                <div class="col-lg-6">
                    <table>
                        <tr>
                            <th width="210px" height="30px" class="text-grey-50 font-semibold">Yêu cầu giới tính:</th>
                            <td class="text-sm font-semibold">
                                @Enums.GetValueFromKey(Enums.SexEnums, Model.JobPostViewModel.Sex)
                      
                             </td>
                        </tr>
                        <tr>
                            <th height="30px" class="text-grey-50 font-semibold">Yêu cầu bằng cấp:</th>
                            <td class="text-sm font-semibold">@Enums.GetValueFromKey(Enums.DegreeEnums, Model.JobPostViewModel.Degree)</td>
                        </tr>
                        <tr>
                            <th height="30px" class="text-grey-50 font-semibold">Yêu cầu kinh nghiệm:</th>
                            <td class="text-sm font-semibold">@Enums.GetValueFromKey(Enums.ExperenceEnums, Model.JobPostViewModel.Experence)</td>
                        </tr>
                        <tr>
                            <th height="30px" class="text-grey-50 font-semibold">Hạn nộp hồ sơ:</th>
                            <td class="text-sm font-semibold">@Model.JobPostViewModel.Deadline.Value.ToString("d/M/yyyy")</td>
                        </tr>

                    </table>
                </div>
            </div>
            <div class="bg-grey-light mb-3"></div>
            <div class="row mb-4">
                <div class="card-body">
                    <div class="bg-cyan-dark-green mb-2" style="width: 150px; height: 10px;"></div>
                    <h2 class="font-semibold text-lg mb-3 card-title">Mô tả công việc</h2>
                    <p class="font-semibold text-sm">@Model.JobPostViewModel.JobDescription</p>
                </div>
            </div>
            <div class="bg-grey-light mb-3"></div>
            <div class="row mb-4">
                <div class="card-body">
                    <div class="bg-cyan-dark-red mb-2" style="width: 160px; height: 10px;"></div>
                    <h2 class="font-semibold text-lg mb-3 card-title">Thông tin liên hệ</h2>
                    <div class="col-lg-12">
                        <table>
                            <tr>
                                <th width="210px" height="30px" class="text-grey-50 font-semibold">Người liên hệ:</th>
                                <td class="text-sm font-semibold">@Model.JobPostViewModel.UserName</td>
                            </tr>
                            <tr>
                                <th height="30px" class="text-grey-50 font-semibold">Email liên hệ:</t>
                                <td class="text-sm font-semibold">@Model.JobPostViewModel.Email</td>
                            </tr>
                            <tr>
                                <th height="30px" class="text-grey-50 font-semibold">Điện thoại:</th>
                                <td class="text-sm font-semibold">@Model.JobPostViewModel.Phone</td>
                            </tr>
                            <tr>
                                <th height="30px" class="text-grey-50 font-semibold">Địa chỉ:</th>
                                <td class="text-sm font-semibold">@Model.JobPostViewModel.Address</td>
                            </tr>

                        </table>
                    </div>
                </div>
               
            </div>
        </div>
        <div class="card text-white bg-warning mb-5" style="max-width: 70rem;">
            <div class="card-body">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="checkDefine">
                    <p class="card-text text-sm font-semibold">
                        Bằng việc tạo tin tuyển dụng, bạn xác nhận đồng ý với các
                            điều kiện và điều khoản sử dụng
                            với Vieclam24h
                    </p>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row-reverse">
            
            <a class="btn btn-secondary font-semibold text-sm m-2" href="/NguoiTuyenDung/TaoTinTuyenDungDetail?handler=CreatePost" id="btnCreatePost">
                Hoàn
                thành
            </a>
            <a id="btnEditJobPost" class="btn btn-primary m-2 font-semibold text-sm">Chỉnh sửa</a>
            <a class="btn btn-danger font-semibold text-sm m-2" href="/NguoiTuyenDung/DanhSachTinDang">Hủy bỏ</a>
        </div>


    </div>
</div>