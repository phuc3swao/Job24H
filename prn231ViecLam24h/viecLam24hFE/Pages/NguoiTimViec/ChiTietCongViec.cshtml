@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http;
@using viecLam24hBE.Models;
@using viecLam24hBE.Commons;
@{
    string userJson = HttpContext.Session.GetString(Enums.SESSION_KEY_USER_UNG_TUYEN);
    User currentUser = null;
    if (userJson != null)
    {
        currentUser = JsonConvert.DeserializeObject<User>(userJson);
    }

}
<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Chi tiết công việc
                </h1>
                <p class="text-white link-nav"><a href="/NguoiTimViec/Homepage">Trang chủ</a>  <span class="lnr lnr-arrow-right"></span>  <a href="single.html">Chi tiết công việc</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start post Area -->
<section class="post-area section-gap">
    <div class="container">
        <div class="row justify-content-center d-flex">
            <div class="col-lg-8 post-list">
                <div class="single-post d-flex flex-row">
                    <div class="thumb">
                        <img src="img/post.png" alt="">
                        <ul class="tags" style="width:140px">
                            @{
                                string[] ltype = @Model.jobPost.JobType.Type.Split(" - ");
                            }
                            @foreach (var type in ltype)
                            {
                                <li>
                                    <a href="#">@type</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="details">
                        <div class="title d-flex flex-row justify-content-between">
                            <div class="titles" style="width:500px">
                                <a href="#"><h4>@Model.jobPost.JobName</h4></a>
                                <h6>Hạn nộp : @Model.jobPost.Deadline.ToString("dd/MM/yyyy")</h6>
                            </div>
                            <ul class="btns">
                                <li><a href="#"><span class="lnr lnr-heart"></span></a></li>
                                @if (Model.jobPost.Deadline < DateTime.Now)
                                {
                                    <li style="background-color:black">
                                        <a class="text-uppercase" style="color:white; pointer-events:none" >HẾT HẠN</a>
                                    </li>
                                }
                                else
                                {
                                    <li style="background-color: lightseagreen">
                                        <a asp-page="./NopHoSo" asp-route-jobid="@Model.jobPost.Id" class="text-uppercase" style="color:white" target="_blank">NỘP HỒ SƠ</a>
                                    </li>
                                }

                            </ul>
                        </div>
                        <h5>Tính chất công việc: @Model.jobPost.WorkingForm</h5>
                        <p class="address"><span class="lnr lnr-map"></span> @Model.jobPost.JobLocation</p>
                        <p class="address"><span class="lnr lnr-database"></span> Lương : @Model.jobPost.Salary $</p>
                    </div>
                </div>
                <div class="single-post job-details">
                    <h4 class="single-title">Yêu cầu công việc</h4>
                    <p>
                        @Model.jobPost.JobDescription
